@{
  Layout = "_Layout";
}

<div class="container">
<h1>To Do List</h1>
<hr />
<h2>Edit Item: @Model.GetDescription()</h2>
<form action="/items/@Model.GetId()/update" method="post">
    <label for="new-description">Name:</label>
    <input id="new-description" type="text" name="new-description" value="@Model.GetDescription()">
    <label for="new-duedate">Due date:</label>
    <input id="new-duedate" type="text" name="new-duedate" value="@Model.GetDuedate()">
    <button type="submit">Update</button>
</form>
<h4><a href="/items">Return home</a></h4>
</div>
