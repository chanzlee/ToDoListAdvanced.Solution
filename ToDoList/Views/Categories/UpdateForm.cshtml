@{
  Layout = "_Layout";
}

<div class="container">
<h1>To Do List</h1>
<hr />
<h2>Edit category: @Model.GetName()</h2>
<form action="/categories/@Model.GetId()/update" method="post">
  <label for="new-category-name">Name:</label>
  <input id="new-category-name" type="text" name="new-category-name" value="@Model.GetName()">
  <button type="submit">Update</button>
</form>
<h4><a href="/categories">Return home</a></h4>
</div>
